<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WPLauncher.Pages.SettingsPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black" Padding="15">
            <Label TextColor="White" FontSize="18">LAUNCHER SETTINGS</Label>
            <Label TextColor="White" FontSize="60">theme</Label>

            <Label Text="Accent color" />
            <Frame BackgroundColor="Black" BorderColor="White" Padding="5" CornerRadius="0">
                <StackLayout Orientation="Horizontal">
                    <BoxView BackgroundColor="Blue" VerticalOptions="Center" WidthRequest="20" HeightRequest="20"/>
                    <Label Text="Cobalt" TextColor="White" FontSize="20" VerticalOptions="Center"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>